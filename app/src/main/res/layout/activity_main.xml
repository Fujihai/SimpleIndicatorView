<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pers.liufushihai.sample.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <pers.liufushihai.customview.SimpleIndicatorView
            android:id="@+id/siv_bottom"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="7"
            app:siv_count="4"
            app:siv_margin="10dp"
            app:siv_orientation="horizontal"
            app:siv_selectedColor="#b3b37c"
            app:siv_size="18dp"
            app:siv_switch_mode="bottom"
            app:siv_type="circle"
            app:siv_unselectedColor="#b0c9c9" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <pers.liufushihai.customview.SimpleIndicatorView
            android:id="@+id/siv_top"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="7"
            app:siv_count="4"
            app:siv_margin="10dp"
            app:siv_orientation="horizontal"
            app:siv_selectedColor="#b3b37c"
            app:siv_size="18dp"
            app:siv_switch_mode="top"
            app:siv_type="circle"
            app:siv_unselectedColor="#b0c9c9" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <pers.liufushihai.customview.SimpleIndicatorView
            android:id="@+id/siv_single"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="7"
            app:siv_count="4"
            app:siv_margin="10dp"
            app:siv_orientation="horizontal"
            app:siv_selectedColor="#b3b37c"
            app:siv_size="18dp"
            app:siv_switch_mode="single"
            app:siv_type="circle"
            app:siv_unselectedColor="#b0c9c9" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <pers.liufushihai.customview.SimpleIndicatorView
            android:id="@+id/siv_bottom_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            app:siv_count="4"
            app:siv_margin="10dp"
            app:siv_orientation="vertical"
            app:siv_selectedColor="#b3b37c"
            app:siv_size="18dp"
            app:siv_switch_mode="bottom"
            app:siv_type="square"
            app:siv_unselectedColor="#b0c9c9" />

        <pers.liufushihai.customview.SimpleIndicatorView
            android:id="@+id/siv_top_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            app:siv_count="4"
            app:siv_margin="10dp"
            app:siv_orientation="vertical"
            app:siv_selectedColor="#b3b37c"
            app:siv_size="18dp"
            app:siv_switch_mode="top"
            app:siv_type="square"
            app:siv_unselectedColor="#b0c9c9" />

        <pers.liufushihai.customview.SimpleIndicatorView
            android:id="@+id/siv_single_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            app:siv_count="4"
            app:siv_margin="10dp"
            app:siv_orientation="vertical"
            app:siv_selectedColor="#b3b37c"
            app:siv_size="18dp"
            app:siv_switch_mode="single"
            app:siv_type="square"
            app:siv_unselectedColor="#b0c9c9" />

    </LinearLayout>

</LinearLayout>
